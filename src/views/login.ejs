<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="style/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="style/bootstrap.min.css">
    <link rel="stylesheet" href="style/sb-admin-2.css">
</head>

<body class="bg-gradient-primary">

    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">Welcome Back!</h1>
                                    </div>
                                    <% if (typeof error_msg!='undefined' ) { %>
                                        <div class="alert alert-warning mb-3 d-block">
                                            <%=error_msg%>
                                        </div>
                                        <% } %>
                                            <div class="alert alert-warning d-none mb-3" id="err"></div>
                                            <form action="/login" method="POST" name="login_form" class="user">
                                                <div class="form-floating mb-3">
                                                    <input type="text" name="username"
                                                        class="form-control form-control-lg" id="floatingInput"
                                                        placeholder="Username" value=<% if(typeof username!='undefined' ){%>
                                                    <%=username%>
                                                        <%}%>
                                                            >
                                                            <i class="fa-solid fa-check my-3 d-none"
                                                                id="login_email_check" style="color: green;"></i>
                                                            <label for="floatingInput">Username or Email</label>
                                                </div>
                                                <div class="form-floating mb-2">
                                                    <input type="password" name="password" class="form-control"
                                                        id="floatingPassword" placeholder="Password">
                                                    <label for="floatingPassword">Password</label>
                                                </div>
                                                <button class="cta my-3 text-decoration-none btn btn-user btn-block"
                                                    style="cursor: pointer;" id="loginBtn">
                                                    <span class="hover-underline-animation">Login</span>
                                                </button>
                                                <hr>
                                                <div
                                                    class="d-flex justify-content-center text-center mt-4 pt-1 login-links">
                                                    <a href="#" class="text-black"
                                                        title="بفلوس والله يا باشا وعليه شبهات كتير"><i
                                                            class="fab fa-facebook-f fa-lg"></i></a>
                                                    <a href="auth/github" class="text-black"
                                                        title="Login Using Your Github Account"><i
                                                            class="fab fa-github fa-lg mx-4 px-2"></i></a>
                                                    <a href="auth/google" class="text-black"
                                                        title="Login Using Your Google Account"><i
                                                            class="fab fa-google fa-lg"></i></a>
                                                </div>
                                            </form>
                                            <hr>
                                            <div class="text-center">
                                                <a class="small" href="forgot-password">Forgot
                                                    Password?</a>
                                            </div>
                                            <div class="text-center">
                                                <a class="small" href="registration">Create an
                                                    Account!</a>
                                            </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="script/all.min.js"></script>
    <script src="script/jquery.js"></script>
    <script src="script/bootstrap.bundle.min.js"></script>
    <!-- <script src="script/validation.js"></script> -->
</body>

</html>