        <div class="pagination">
            <%if(page==1){%><a class="disabled">&laquo;</a>
                <%}else{%>
                    <a href="?page=<%=page-1%>">&laquo;</a>
                    <%}%>

                        <%for(let i=0;i<pag_count;i++){%>
                            <% if(i+1==page){%>
                                <a class="active" href="?page=<%=i+1%>">
                                    <%=i+1%>
                                </a>
                                <%continue;%>
                                    <%}%>
                                        <a href="?page=<%=i+1%>">
                                            <%=i+1%>
                                        </a>
                                        <%}%>
                                            <%if(page==pag_count){%><a class="disabled">&raquo;</a>
                                                <%}else{%>
                                                    <a href="?page=<%=page+1%>">&raquo;</a>
                                                    <%}%>
        </div>

